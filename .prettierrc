{
    "plugins": ["prettier-plugin-solidity"],
    "useTabs": false,
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": false,
    "bracketSpacing": true,
    "overrides": [
        {
            "files": ["*.ts", "*.js"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.sol",
            "options": {
                "singleQuote": false
            }
        }
    ]
}
